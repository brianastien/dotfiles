# general aliases
alias cd..="cd .."
alias l="ls -al"
alias lp="ls -p"
alias o="open ."

# the "kp" alias ("que pasa"), in honor of tony p.
alias kp="ps auxwww"

# bundler aliases
alias b="bundle"
alias bi="b install --path vendor"
alias bo="EDITOR=mate b open"
alias bu="b update"
alias bx="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"